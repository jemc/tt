#!/usr/bin/bash

function update_time {
  curr_date=$(date +"%a %b %d %Y")
  curr_time=$(date +"%H:%M:%S")
}

function create_entry {
  last_date=$curr_date
  last_time=$curr_time
  update_entry
}

function update_entry {
  curr_entry="??:?? | ${last_date} | ${last_time} - ${curr_time}"
}

function do_over {
  echo -ne "\033[1A"
}

update_time
create_entry
echo "$curr_entry"
sleep 1

update_time
update_entry
do_over
echo "$curr_entry"
