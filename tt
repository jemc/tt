#!/usr/bin/bash

REFRESH_TIME=0.2
FORMAT_DURATION="%H:%M:%S"
FORMAT_TIME="%H:%M:%S"
FORMAT_DATE="%a %b %d %Y"
FORMAT_ENTRY="  \${duration} | \${last_date} | \${last_time} - \${curr_time}"

function update_time {
  curr_date=$(date +"$FORMAT_DATE")
  curr_time=$(date +"$FORMAT_TIME")
  curr_secs=$(date +"%s")
}

function start_entry {
  update_time
  last_date=$curr_date
  last_time=$curr_time
  last_secs=$curr_secs
  update_entry
}

function update_entry {
  update_time
  duration=$(date -u -d @"$((curr_secs-last_secs))" +"$FORMAT_DURATION")
  eval "curr_entry=\"$FORMAT_ENTRY\""
}

function show_entry {
  echo "$curr_entry"
}

function do_over {
  echo -ne "\033[1A"
}

start_entry
show_entry

while true; do
  update_entry
  do_over
  show_entry
  sleep $REFRESH_TIME
done
